<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.ManagerNavBarController"
      style="-fx-border-color: white" fx:id="navBar">
    <VBox styleClass="MenuBar"
          accessibleText="Return to Homepage Button">
        <Button text="Home"
                   fx:id="returnHomeLink"
                   onAction="#handleReturnHome"
                   accessibleText="Return to Home Page Link"/>
    </VBox>
    <VBox styleClass="MenuBar"
          accessibleText="Staff Buttons">
        <Button text="View All Staff"
                   fx:id="viewAllStaff"
                   onAction="#handleViewAllStaff"
                   accessibleText="View All Staff Link"/>
        <Button text="Add/Edit Staff"
                   fx:id="addEditStaffLink"
                   onAction="#handleAddEditStaff"
                   accessibleText="Add or Edit Staff Link"/>
    </VBox>
    <VBox styleClass="MenuBar"
          accessibleText="Skill Buttons">
        <Button text="View Skill"
                   fx:id="viewSkillsLink"
                   onAction="#handleViewSkills"
                   accessibleText="View Skill Link"/>
        <Button text="Add,Edit,Delete Skill"
                   fx:id="addEditDeleteSkills"
                   onAction="#handleAddEditDeleteSkills"
                   accessibleText="Add, Edit or Delete Skill"/>
    </VBox>
    <VBox styleClass="MenuBar"
          accessibleText="Quit Application Button">
        <Button text="Quit"
                   onAction="#handleQuitAction"
                   accessibleText="Quit Application"/>
    </VBox>
</VBox>